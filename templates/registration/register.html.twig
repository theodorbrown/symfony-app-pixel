{% extends "front-layout.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscrivez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="d-flex align-items-end">
            {{ form_row(registrationForm.address) }}
            <select class="form-control ms-2 mb-3" id="address_results" data-url="{{ path('searchaddress') }}"></select>
        </div>
        {{ form_row(registrationForm.agreeTerms) }}
        <div class="text-center">
            <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
        
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
